{% extends "layout.njk" %}

{% block head %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Cursos - Rocketseat</title>
{% endblock %}

{% block content %}
    <h1>CONTEÃšDOS</h1>

    <section class="cards">

        {% for course in courses %}
            <div class="card" id="{{course.name}}">
                <img src="{{course.img_logo}}" alt="Logo {{course.name}}">
                <h2>{{course.name}}</h2>
                <div class="card_info">
                    <p>{{course.module_num}}</p>
                    <p class="card_price">{{course.price}}</p>
                </div>
            </div>
        {% endfor %}

    </section>

    <div class="modal-overlay">
        <div class="modal">
            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>

            <a class="maximize-modal">
                <i class="material-icons">fullscreen</i>
            </a>

            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>
{% endblock %}